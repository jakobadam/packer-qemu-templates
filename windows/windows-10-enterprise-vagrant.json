{
    "variables": {
        "disk_size": "61440",
        "password": "vagrant"
    },

    "builders": [
        {
            "name": "windows-10-enterprise-vagrant",

            "type": "qemu",
            "format":"qcow2",
            "accelerator": "kvm",

            "disk_size": "{{ user `disk_size`}}",
            "disk_interface":"virtio",

            "iso_url": "http://care.dlservice.microsoft.com/dl/download/C/3/9/C399EEA8-135D-4207-92C9-6AAB3259F6EF/10240.16384.150709-1700.TH1_CLIENTENTERPRISEEVAL_OEMRET_X64FRE_EN-US.ISO",
            "iso_checksum_type": "sha1",
            "iso_checksum": "56ab095075be28a90bc0b510835280975c6bb2ce",

            "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "boot_wait": "2s",

            "floppy_files": [
                "floppy/drivers/virtio-win-0.1.102/viostor/w8.1/amd64/*",
                "floppy/drivers/virtio-win-0.1.102/NetKVM/w8.1/amd64/*",
                "floppy/common/*",
                "floppy/windows-10-enterprise//*"
            ],

            "communicator": "winrm",

            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "10000s",

            "qemuargs": [
                [ "-m", "4048M" ],
                [ "-cpu", "Westmere" ]
            ]
        }
    ],

    "provisioners": [
        {
            "type": "windows-shell",
            "scripts": [
                "scripts/unlimited-password-expiration.bat",
                "scripts/enable-rdp.bat",
                "scripts/uac-disable.bat",
                "scripts/disablewinupdate.bat",
                "scripts/disable-hibernate.bat",
                "scripts/firewall-open-ping.bat",
                "scripts/firewall-open-rdp.bat"
            ]
        }
    ],

    "post-processors": [
        {
            "keep_input_artifact": false,
            "output": "box/windows-10-enterprise.box",
            "type": "vagrant",
            "vagrantfile_template": "vagrantfile-windows-10-enterprise.template"
        }
    ]
}
